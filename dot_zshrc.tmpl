{{- if eq .chezmoi.os "darwin" -}}

setopt autocd
setopt correct

EDITOR=nvim

# aliases
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias ls="eza --icons=auto --group-directories-first"
alias la="ls -la"
alias lt="ls -T"

# Sketchybar interactivity overloads
function brew() {
  command brew "$@"

  if [[ $* =~ "upgrade" ]] || [[ $* =~ "update" ]] || [[ $* =~ "outdated" ]]; then
    sketchybar --trigger brew_update
  fi
}

{{- end -}}